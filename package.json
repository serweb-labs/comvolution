{
  "name": "comvolution",
  "version": "0.1.0",
  "private": true,
  "description": "Comvolution - Headless commerce engine (NestJS + TypeORM + PostgreSQL)",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "typeorm": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' node_modules/typeorm/cli.js -d src/database/data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/auto",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "dotenv": "^16.4.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2",
    "@types/js-yaml": "^4.0.9"
  }
}
